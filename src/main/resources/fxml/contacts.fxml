<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="pane" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.sora.fx.controllers.ContactsController">
    <children>
        <TableView fx:id="tableClient" editable="true" prefHeight="200.0" prefWidth="405.0" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <!--<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>-->
            <!--<columns>-->
            <!--<TableColumn prefWidth="75.0" text="Name" fx:id="name" />-->
            <!--<TableColumn prefWidth="75.0" text="Email" fx:id="email" />-->
            <!--<TableColumn prefWidth="75.0" text="Phone" fx:id="phone" />-->
            <!--</columns>-->
        </TableView>
        <HBox alignment="CENTER" layoutX="21.0" layoutY="207.0" prefHeight="50.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#addPerson" text="%contactlistform.addPerson" >
                    <HBox.margin>
                        <Insets right="3.0" />
                    </HBox.margin>
                </Button>
                <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#editPerson" text="Edit person" >
                    <HBox.margin>
                        <Insets right="3.0" />
                    </HBox.margin>
                </Button>
                <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#delPerson" text="Delete person" >
                    <HBox.margin>
                        <Insets right="3.0" />
                    </HBox.margin>
                </Button>
                <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#refresh" text="refresh" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
